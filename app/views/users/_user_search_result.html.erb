<li class="userSearchResult">
	<div class="row">
  	<div class="col-sm-3">
  		<img class="userPhoto" src="https://graph.facebook.com/<%= user.uid %>/picture?width=150&height=150" alt="" />
  	</div>
  	<div class="col-sm-9">
    	<%= link_to user do %>
    		<h4><%= user.name.to_s %></h4>
    	<% end %>
    	<div class="userInfo">
    		<dt>Education</dt>
    		<dd>
    			<%= user.university if user.university %>
    			<%= "Not specified." if !user.university %>
    			<span> - </span>
    			<%= user.grad_year if user.grad_year %>
    			<%= "Not specified." if !user.grad_year %>
    		</dd>
				<dt>Work</dt>
				<dd class="<%= "text-muted" if !user.age %>">
					<%= user.company if user.company %>
					<%= "Not specified." if !user.age %>
					<span> - </span>
    			<%= user.occupation if user.occupation %>
    			<%= "Not specified." if !user.occupation %>
				</dd>
			</div>
			<br/>
			<div class="actionButtons row">
				<div class="col-sm-4">
					<%= link_to "View Profile", user, class: "btn btn-primary btn-sm btn-block" %>
				</div>
				<div class="col-sm-4">
					<%= link_to "Send Message", "#", class: "btn btn-primary btn-sm btn-block" %>
				</div>
				<div class="col-sm-4">
					<%= link_to "Add to Roomidex", "#", class: "btn btn-primary btn-sm btn-block" %>
				</div>
			</div>
    </div>
  </div>
</li>