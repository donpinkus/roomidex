<div class="container">
	<div class="row">
		<div class="col-sm-3">
			<%= search_form_for @search, class: "form" do |f| %>
				<div class="panel panel-default">
					<div class="panel-heading">
						<h4 class="panel-title">Move</h4>
					</div>
					<div class="panel-body">
						<div class="form-group">
							<p>Move dates:</p>
							<%= f.label :move_start_date_gteq, "Start" %>
							<%= f.date_field :move_start_date_gteq, class: "form-control" %>
							<%= f.label :move_start_date_lteq, "End" %>
							<%= f.date_field :move_end_date_lteq, class: "form-control" %>
						</div>
						<div class="form-group">
							<p>Price Range:</p>
							<%= f.label :move_min_price_gteq, "Minimum" %>
							<%= f.text_field :move_min_price_gteq, class: "form-control" %>
							<%= f.label :move_max_price_lteq, "Maximum" %>
							<%= f.text_field :move_max_price_lteq, class: "form-control" %>
						</div>
					</div>
				</div>
				<div class="panel panel-default">
					<div class="panel-heading">
						<h4 class="panel-title">Personality</h4>
					</div>
					<div class="panel-body">
						<div class="form-group">
							<%= f.label :age_gteq, "Age between" %>
							<%= f.text_field :age_gteq, class: "form-control" %>
							<span> and </span>
							<%= f.text_field :age_lteq, class: "form-control" %>
						</div>
					</div>
				</div>		
				<%= f.submit "Search", class: "btn btn-default btn-sm" %>
			<% end %>
			<div>
				<p><%= sort_link @search, :name, "Name" %></p>
				<p><%= sort_link @search, :age, "Age" %></p>
			</div>
		</div>
		<div class="col-sm-9">
			<ul class="users">
			<% @users.each do |user| %>
		    <li class="userSearchResult">
		    	<div class="row">
			    	<div class="col-sm-3">
			    		<img class="userPhoto" src="https://graph.facebook.com/<%= user.uid %>/picture?width=150&height=150" alt="" />
			    	</div>
			    	<div class="col-sm-9">
			      	<%= link_to user do %>
			      		<h4><%= user.name.to_s %></h4>
			      	<% end %>
			      	<div class="userInfo">
			      		<dl class="dl-horizontal">
									<dt>University</dt>
									<dd class="<%= "text-muted" if !user.age %>">
										<%= user.university if user.university %>
										<%= "Not specified." if !user.age %>
									</dd>
									<dt>Graduation</dt>
									<dd class="<%= "text-muted" if !user.age %>">
										<%= user.grad_year if user.grad_year %>
										<%= "Not specified." if !user.age %>
									</dd>
									<dt>Company</dt>
									<dd class="<%= "text-muted" if !user.age %>">
										<%= user.company if user.company %>
										<%= "Not specified." if !user.age %>
									</dd>
								</dl>
							</div>
							<div class="actionButtons row">
								<div class="col-sm-4">
									<%= link_to "View Profile", user, class: "btn btn-default btn-sm btn-block" %>
								</div>
								<div class="col-sm-4">
									<%= link_to "Send Message", "#", class: "btn btn-default btn-sm btn-block" %>
								</div>
								<div class="col-sm-4">
									<%= link_to "Add to Roomidex", "#", class: "btn btn-default btn-sm btn-block" %>
								</div>
							</div>
			      </div>
			    </div>
		    </li>
			<% end %>
			</ul>
		</div>
	</div>
</div>
